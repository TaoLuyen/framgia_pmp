<%= render "shared/category_tab", project: @project,
  active_tab: Settings.tabs.overview_project, f: nil %>
<div class="project_setting">
  <div class ="row">
    <h3><%= @project.name %></h3>
    <ul class="nav nav-tabs" id="setting_project">
      <li>
        <%= link_to t("projects.show.information"), "#informations", data: {toggle: "tab"} %>
      </li>
      <li>
        <%= link_to t("projects.show.member"), "#project_members", data: {toggle: "tab"} %>
      </li>
      <li>
        <%= link_to t("projects.show.phase"), "#project_phases", data:{toggle: "tab"} %>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="informations">
        <%= render "setting_information" %>
      </div>

      <div class="tab-pane" id="project_members">
        <%= render "setting_members" %>
      </div>

      <div class="tab-pane" id="project_phases">
        <%= render "setting_phases" %>
      </div>
    </div>
  </div>
</div>
