<%= render "shared/category_tab", project: @project, active_tab: @sprint.id, f: nil %>
  <div id="wrapper">
    <div id="work-performance-datas">
      <table class="table table-striped tbl-work-performance-datas">
        <thead>
          <tr>
            <th class="th"></th>
            <th class="activity"><%= t "table.thead.activity" %></th>
            <th class="assigned"><%= t "table.thead.assigned" %></th>
            <% @phases.each do |phase| %>
              <th colspan="7" class="phase-name"><%= phase.phase_name %></th>
            <% end %>
          </tr>
          <tr>
            <th class="th"></th>
            <th class="activity"></th>
            <th class="assigned"></th>
            <% @phases.each do |phase| %>
              <th class="phase-value" title="<%= t "phase_value.plan" %>">
                <%= t "table.thead.plan" %>
              </th>
              <th class="phase-value" title="<%= t "phase_value.actual" %>">
                <%= t "table.thead.actual" %>
              </th>
              <th class="phase-value" title="<%= t "phase_value.spent_hour" %>">
                <%= t "table.thead.spent_hour" %>
              </th>
              <th class="phase-value" title="<%= t "phase_value.burned_hour" %>">
                <%= t "table.thead.burned_hour" %>
              </th>
              <th class="phase-value" title="<%= t "phase_value.estimated_story" %>">
                <%= t "table.thead.estimated_story" %>
              </th>
              <th class="phase-value" title="<%= t "phase_value.burned_story" %>">
                <%= t "table.thead.burned_story" %>
              </th>
              <th class="phase-value" title="<%= t "phase_value.estimated_task" %>">
                <%= t "table.thead.estimated_task" %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @activities.each_with_index.map do |activity, index| %>
            <tr>
              <td class="th"><%= index + 1 %></td>
              <td><%= link_to "#{activity.subject}",
                edit_admin_project_sprint_work_performance_path(
                @project, @sprint, activity.work_performance), remote: true %>
              </td>
              <td class="assigned"><%= activity.user_name %></td>
              <% @phases.each do |phase| %>
                <% if activity.work_performance.present? &&
                  activity.work_performance.phase == phase %>
                  <td class="phase-value", id="plan-<%= activity.id %>">
                    <%= activity.work_performance_plan %>
                  </td>
                  <td class="phase-value", id="actual-<%= activity.id %>">
                    <%= activity.work_performance_actual %>
                  </td>
                  <td class="phase-value", id="spent_hour-<%= activity.id %>">
                    <%= activity.work_performance_spent_hour %>
                  </td>
                  <td class="phase-value", id="burned_hour-<%= activity.id %>">
                    <%= activity.work_performance_burned_hour %>
                  </td>
                  <td class="phase-value", id="estimated_story-<%= activity.id %>">
                    <%= activity.work_performance_estimated_story %>
                  </td>
                  <td class="phase-value", id="burned_story-<%= activity.id %>">
                    <%= activity.work_performance_burned_story %>
                  </td>
                  <td class="phase-value", id="estimated_task-<%= activity.id %>">
                    <%= activity.work_performance_estimated_task %>
                  </td>
                <% else %>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<%= render "dialog" %>
